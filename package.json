{
  "name": "conduit-bootstrap-template",
  "version": "2.0.0",
  "description": "Conduit Bootstrap Template",
  "main": "gulpfile.js",
  "author": "Johan Janse van Rensburg <johanjvrens@optsci.co.za>",
  "copyright": "Thinkster",
  "license": "MIT",
  "private": true,
  "keywords": [
    "Conduit",
    "Bootstrap",
    "Template"
  ],
  "homepage": "https://github.com/gothinkster/conduit-bootstrap-template#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gothinkster/conduit-bootstrap-template.git"
  },
  "bugs": {
    "url": "https://github.com/gothinkster/conduit-bootstrap-template/issues"
  },
  "scripts": {
    "prestart": "npm install",
    "start": "gulp",
    "prebuild": "npm install",
    "build": "gulp build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "bootstrap": "^4.0.0-beta",
    "jquery": "^3.2.1",
    "popper.js": "^1.12.4"
  },
  "devDependencies": {
    "browser-sync": "^2.18.13",
    "chalk": "^2.1.0",
    "fancy-log": "^1.3.0",
    "git-rev-sync": "^1.9.1",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^4.0.0",
    "gulp-clean-css": "^3.7.0",
    "gulp-data": "^1.2.1",
    "gulp-header": "^1.8.9",
    "gulp-load-plugins": "^1.5.0",
    "gulp-nunjucks-render": "^2.2.1",
    "gulp-plumber": "^1.1.0",
    "gulp-sass": "^3.1.0",
    "gulp-sourcemaps": "^2.6.1",
    "gulp-uglify": "^3.0.0",
    "moment": "^2.18.1",
    "workbox-build": "^2.0.0"
  },
  "paths": {
    "src": {
      "base": "src/",
      "scss": "src/scss/**/*.scss",
      "css": ".tmp/css/**/*.css",
      "js": "src/assets/**/*.js",
      "html": ".tmp/**/*.html",
      "njk": "src/pages/**/*.+(html|njk)",
      "templates": "src/templates/**/*.+(html|njk)",
      "img": "src/assets/**/*.+(png|jpg|webp|svg)"
    },
    "build": {
      "base": ".tmp/",
      "css": ".tmp/css/",
      "js": ".tmp/js/",
      "html": ".tmp/"
    },
    "dist": {
      "base": "dist/",
      "css": "dist/css/",
      "js": "dist/js/",
      "html": "dist/",
      "img": "dist/img"
    }
  },
  "vars": {
    "siteCssName": "site.combined.min.css",
    "scssName": "style.scss",
    "cssName": "style.css"
  }
}
